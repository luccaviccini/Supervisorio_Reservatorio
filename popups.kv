#:kivy 1.11.1
<ModbusPopup>:
    title: "Configurações MODBUS"
    size_hint_y: None
    size_hint_x: 0.4
    height: 200
    BoxLayout:
        id: layout
        orientation: "vertical"
        GridLayout:
            cols: 2
            rows: 2
            Label:
                text: "IP"
                font_size: 14
            TextInput:
                id: text_ip
                text: "127.0.0.1"
                font_size: 14
                halign: "center"
                valign: "middle"
            Label:
                text: "PORTA"
                font_size: 14
            TextInput:
                id: text_porta
                text: "502"
                font_size: 14
                halign: "center"
                valign: "middle"
        BoxLayout:
            orientation: "horizontal"
            Button:
                size_hint_y: None
                height: 40
                text: "Conectar"
                on_release:
                    root.clearInfo()
                    app.root.stardDataRead(text_ip.text, int(text_porta.text))
            Button:
                size_hint_y: None
                height: 40
                text: "Fechar" 
                on_release:
                    root.dismiss() 
                    root.clearInfo()

<ScanPopup>:
    title: "Configurações ScanTime"
    size_hint_y: None
    size_hint_x: 0.4
    height: 150
    BoxLayout:
        id: layout
        orientation: "vertical"
        GridLayout:
            cols: 2
            rows: 1
            Label:
                text: "ScanTime[ms]"
                font_size: 14
            TextInput:
                id: txt_st 
                font_size: 14
                halign: "center"
                valign: "middle"
        BoxLayout:
            orientation: "horizontal"
            Button:
                size_hint_y: None
                height: 40
                text: "Configurar"
                on_release:
                    app.root._scan_time = int(txt_st.text)
                    
            Button:
                size_hint_y: None
                height: 40
                text: "Fechar" 
                on_release:
                    root.dismiss()                                

<ControlePopup>:
    title: "Configuraçao dos Switches"
    size_hint_y: None
    size_hint_x: 0.8
    height: 150
    BoxLayout:
        orientation: "horizontal"
        BoxLayout:
            orientation: "vertical"
            Label:
                text:'Switch Motor'
            MySwitch:
                id: switch_motor        
                on_active: app.root.switch_click(self,self.active, 'coil', 800) 
        BoxLayout:
            orientation: "vertical"
            Label:
                text:'Solenoide_1'
            MySwitch:
                id: sol_1        
                on_active: app.root.switch_click(self,self.active, 'coil', 801) 
        BoxLayout:
            orientation: "vertical"
            Label:
                text:'Solenoide_2'
            MySwitch:
                id: sol_2        
                on_active: app.root.switch_click(self,self.active, 'coil', 802) 
        BoxLayout:
            orientation: "vertical"
            Label:
                text:'Solenoide_3'
            MySwitch:
                id: sol_3        
                on_active: app.root.switch_click(self,self.active, 'coil', 803)
        BoxLayout:
            orientation: "vertical"
            Label:
                text:'Set Point '
            TextInput:
                id: txt_set_point 
                id: txt_st 
                font_size: 14
                halign: "center"
                valign: "middle"
        Button:
            id: bt_fechar_motor
            text: "Fechar" 
            size_hint: (0.7, 0.7) 
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}    

            
            on_release:
                root.dismiss()     


<MySwitch@Switch>:
    active: False
    disabled: True
    font_size: 20   
    pos_hint: {'center_x': 0.5, 'center_y': 0.5} 

<DataGraphPopup>:
    title: "Gráfico do Nível do Reservatório"
    BoxLayout:
        orientation: 'vertical'
        TimeSeriesGraph:
            id: graph
            xlabel: 'Horário'
            ylabel: 'Nível [L]'
            background_color: 0.5,0.5,0.5,0.5
            x_ticks_minor: 1
            x_ticks_major: 5
            y_ticks_major: 100
            y_grid_label: True
            x_grid_label: True
            padding: 5
            x_grid: True
            y_grid: True
            xmin: 0
            ymin: 0
            ymax: 1100
        BoxLayout:
            orientation:'horizontal'
            size_hint: (1,0.05)
            BoxLayout:
                orientation:'horizontal'
                size_hint: (0.5,1)
                Label:
                    size_hint: (0.3,1)
                    text: "Número de pontos do gráfico"
                LabeledCheckBoxDataGraph:
                    id:mp20
                    on_kv_post:
                        self.ids.label.text = '20'
                        self.ids.checkbox.group = 'cb_group'
                        self.ids.checkbox.active = True
                LabeledCheckBoxDataGraph:
                    id:mp50
                    on_kv_post:
                        self.ids.label.text = '50'
                        self.ids.checkbox.group = 'cb_group'
                LabeledCheckBoxDataGraph:
                    id:mp100
                    on_kv_post:
                        self.ids.label.text = '100'
                        self.ids.checkbox.group = 'cb_group'
            Button:
                text: "Fechar"
                size_hint: (0.2,1)
                on_release: root.dismiss()

<LabeledCheckBoxDataGraph>:
    orientation: 'horizontal'
    size_hint: (0.1,1)
    CheckBox:
        id: checkbox
        on_active: app.root._graph.ids.graph.setMaxPoints(int(label.text),0) if app.root is not None else None
    Label:
        id:label


