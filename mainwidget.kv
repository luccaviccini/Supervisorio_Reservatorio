#:kivy 1.11.1
<MainWidget>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: 0.5,0.5,0.53 # tom cinza
        Rectangle:
            size: self.size # todo o plano de fundo do mainwidget
    BoxLayout: # barra superior
        orientation:'horizontal' 
        size_hint: (1,0.1) # relativo ao MainWidget (10% em relacao ao eixo y)
        spacing: 10
        Label:
            text: 'SUPERVISÓRIO RESERVATÓRIO v1.0'
            size_hint_x: None
            width: 300
        BoxLayout: # parte da direita do cabecalho 
            orientation:'vertical'
            size_hint_x: None
            width: 400
            Label:
                text: 'Configurações'
            BoxLayout:
                orientation:'horizontal'
                Button:
                    text: "MODBUS"
                    on_release: root._modbusPopup.open()
                Button:
                    text: "Scan time"
                    on_release: root._scanPopup.open()
                Button:
                    text: "Controle"
                    on_release: root._controlePopup.open()
  

        Image: # terceira coisa na horizontal do cabecalho
            id: img_con
            size_hint_x: None
            width: 80
            source: 'imgs/desconectado.png'
            pos_hint: {'top':1, 'right':1}
    FloatLayout:
        canvas:
            Color:
                rgb: 1,1,1
            Rectangle:
                size: self.size
        Image:
            source: 'imgs/planodefundotemp.png'
           
        TempLabel:
            id: pot_entrada
            text: '-.- W'
            pos_hint: {'x': 0.27, 'y': -0.03}
        TempLabel:
            id: vz_entrada
            text: '-.-vazão'
            pos_hint: {'x': -0.3, 'y': +0.33}
        TempLabel:
            id: nivel
            text: '-.- L'
            pos_hint: {'x': 0.1, 'y': 0.4}
        TempLabel:
            id: rotacao
            text: '-.- rpm'
            pos_hint: {'x': 0.28, 'y': 0.34}
        TempLabel:
            id: freq_mot
            text: '-.- Hz'
            pos_hint: {'x': 0.28, 'y': 0.10}
        TempLabel:
            id: temp_estator
            text: '-.- °C'
            pos_hint: {'x': 0.4, 'y': 0.34}
        Button:
            size_hint:(None, None)
            size: (0.8*62, 0.8*58)   # a imagem tem 62x58 pixels
            background_normal: 'imgs/graph_icon.jpg'
            background_down: 'imgs/graph_icon.jpg'
            pos_hint: {'x':0.002, 'y': 0.002}
            on_release:
                root._graph.open()

            



            

<TempLabel@Label>:
    font_size: 20
    bold: True
    halign: 'center'
    color: 0,0,0,1