#:kivy 1.11.1
<MainWidget>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: 0.5,0.5,0.53 # tom cinza
        Rectangle:
            size: self.size # todo o plano de fundo do mainwidget
    BoxLayout: # barra superior
        orientation:'horizontal' 
        size_hint: (1,0.1) # relativo ao MainWidget (10% em relacao ao eixo y)
        spacing: 10
        Label:
            text: 'SUPERVISÓRIO RESERVATÓRIO v1.0'
            size_hint_x: None
            width: 300
        BoxLayout: # parte da direita do cabecalho 
            orientation:'vertical'
            size_hint_x: None
            width: 400
            Label:
                text: 'Configurações'
            BoxLayout:
                orientation:'horizontal'
                Button:
                    text: "MODBUS"
                    on_release: root._modbusPopup.open()
                Button:
                    text: "Scan time"
                    on_release: root._scanPopup.open()

  

        Image: # terceira coisa na horizontal do cabecalho
            id: img_con
            size_hint_x: None
            width: 80
            source: 'imgs/desconectado.png'
            pos_hint: {'top':1, 'right':1}
    FloatLayout:
        canvas:
            Color:
                rgb: 1,1,1
            Rectangle:
                size: self.size
        Label:
            id: lb_reservatorio
            size_hint: (None, None)
            size: (188,199)
            pos_hint: {'x': 0.3225, 'y': 0.54}
            canvas:
                Color: 
                    rgb: 0.5,0.8,1
                Rectangle:
                    size: self.size
                    pos: self.pos

        Image:
            source: 'imgs/Prancheta___1.png'
  

        TempLabel:
            id: vz_entrada
            text: '-.-vazão'
            pos_hint: {'x':-0.40, 'y': 0.25}
        TempLabel:
            id: nivel
            text: '-.- L'
            pos_hint: {'x': 0.01, 'y': 0.07}

        Button:
            id: bt_live_graph
            size_hint:(None, None)
            size: (0.8*62, 0.8*58)   # a imagem tem 62x58 pixels
            background_normal: 'imgs/graph_icon.jpg'
            background_down: 'imgs/graph_icon.jpg'
            pos_hint: {'x':0.002, 'y': 0.002}
            on_release:
                root._graph.open()
        Button:
            id: bt_info_motor
            size_hint:(None, None)
            size: (0.06*1024,0.06*1024)   # a imagem tem 62x58 pixels
            background_normal: 'imgs/info2.png'
            background_down: 'imgs/info2.png'
            pos_hint: {'x':0.7, 'y': 0.57}
            on_release:
                root._infoPopup.open()



        MyToggleButton:
            id: tb_motor            
            pos_hint: {'x':0.7, 'y': 0.78}
            on_press:
                app.root.toggle_click(self.state, 'coil', 800)
            on_release:
                app.root.toggle_click(self.state, 'coil', 800)

        MyToggleButton:
            id: solenoide_1            
            pos_hint: {'x':0.001, 'y': 0.49}
            on_press:
                app.root.toggle_click(self.state, 'coil', 801)
            on_state:
                app.root.toggle_click(self.state, 'coil', 801)

        MyToggleButton:
            id: solenoide_2            
            pos_hint: {'x':0.001, 'y': 0.355}
            on_press:
                app.root.toggle_click(self.state, 'coil', 802)
            on_state:
                app.root.toggle_click(self.state, 'coil', 802)

        MyToggleButton:
            id: solenoide_3            
            pos_hint: {'x':0.001, 'y': 0.21}
            on_press:
                app.root.toggle_click(self.state, 'coil', 803)
            on_state:
                app.root.toggle_click(self.state, 'coil', 803)
        Button:
            text: 'Dados Históricos'
            pos_hint: {'right':1, 'down':1}
            size_hint: (0.2,0.05) # 20% de largura e 5% de altura do widget pai
            on_release:
                root._hgraph.open()



            



            

<TempLabel@Label>:
    state: 'down'
    font_size: 18
    bold: True
    halign: 'center'
    color: 0,0,0,1

<MyToggleButton@ToggleButton>:
    disabled: False
    state: 'normal'
    background_normal: 'imgs/toggle_off.png'
    background_down: 'imgs/toggle_on.png'
    size_hint: (0.12,0.18)